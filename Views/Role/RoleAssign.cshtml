@model List<WebApplication1.Models.ViewModels.RoleAssignViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
   
<div class="container text-center mt-3" >
    <h2>Yetkilendirme</h2>
    <form asp-action="RoleAssign" asp-controller="Role">
        <table align="center" class="table text-white mt-2 text-center col-md-4" style="background-color:grey;">
            <thead>
                <tr>
                    <th>
                    </th>
                    <th>
                        Rol İsmi 
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td><input type="checkbox" asp-for="@Model[i].HasAssign" /> </td>
                        <td>
                            @Model[i].RoleName
                            <input type="hidden" asp-for="@Model[i].RoleId" />
                            <input type="hidden" asp-for="@Model[i].RoleName" />
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="2">
                        <button class="btn btn-info">Rol Ata</button>     
                        <a href="/User/Index" class="btn btn-light">Geri</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>    
</div>