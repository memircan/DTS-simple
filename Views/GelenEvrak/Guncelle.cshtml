@model WebApplication1.Models.ViewModels.GelenEvrak
@{
    ViewData["Title"] = "Guncelle";
}

<h1>Güncelleme</h1>

@using (Html.BeginForm("Guncelle2","GelenEvrak", FormMethod.Post))
{
    <div class="row">   

        <div style="display:none">          
            @Html.TextBoxFor(x => x.GelenId, new {@readonly = true, @class = "form-control" })
            @Html.TextBoxFor(x => x.UserId, new {@readonly = true, @class = "form-control" })
        </div>

        <div class="col-sm-4 py-2">
            <b>Tarih</b>
            @Html.TextBoxFor(x => x.GelenTarih, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.GelenTarih, "", new { @style = "color:red" })
        </div>   
        <div class="col-sm-4 py-2">
            <b>Birim</b>
             @Html.DropDownListFor(x => x.BirimId, (List<SelectListItem>)ViewBag.brm, "Lütfen Birim Seçin", new { @class = "form-control" })
        </div>

         <div class="col-sm-4 py-2">
            <b>Gönderen</b>
            @Html.TextBoxFor(x => x.GelenGonderen, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.GelenGonderen, "", new { @style = "color:red" })
        </div>

        <div class="col-sm-4 py-2">
            <b>Cins</b>
            @Html.TextBoxFor(x => x.GelenCins, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.GelenCins, "", new { @style = "color:red" })
        </div>

        <div class="col-sm-4 py-2">
            <b>Konu</b>
            @Html.TextAreaFor(x => x.GelenKonu, new { @class = "form-control",@style="resize:none" ,@rows="3",@maxlength="133" , @placeholder = "Açıklama.." })
            @Html.ValidationMessageFor(x => x.GelenKonu, "", new { @style = "color:red" })
        </div>
        <br />
    </div>
    <button class="btn btn-info">Güncelle</button>
    <a href="/GelenEvrak/Detay/@Model.GelenId" class="btn btn-light">Geri</a>
}